<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<display-name>Archetype Created Web Application</display-name>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.Servlets.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>com.Servlets.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>createAccount</servlet-name>
		<servlet-class>com.Servlets.CreateAccountServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>createAccount</servlet-name>
		<url-pattern>/createAccount</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>addTask</servlet-name>
		<servlet-class>com.Servlets.AddTaskServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>addTask</servlet-name>
		<url-pattern>/task</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>delete</servlet-name>
		<servlet-class>com.Servlets.DeleteTaskServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>delete</servlet-name>
	<url-pattern>/deleteTask</url-pattern>
	</servlet-mapping>
</web-app>
